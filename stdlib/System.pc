import stdlib.lang.Casting

native func exit(text)

func exit(): exit("Exit");

native func print(text)

native func read()

func read(text msg) {
    print(msg)
    return read()
}

func readNr() -> nr: return number(read());
func readNr(text msg) -> nr: return number(read(msg));

func readBool() -> bool: return boolean(read());
func readBool(text msg) -> bool: return boolean(read(msg));